{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "noImplicitReturns": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "lib": [
      "es2016"
    ],
    "downlevelIteration": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}
